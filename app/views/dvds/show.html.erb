<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @dvd.name %>
</p>

<p>
  <b>Beschreibung:</b>
  <%= @dvd.beschreibung %>
</p>
<% if user_signd_in? %>
	<% if current_user.role = "admin" || current_user.role = "mitarbeiter" %>
		<p>
			<b>Userid:</b>
			<%= @dvd.userid %>
		</p>
		<p>
			<b>Anzahl:</b>
			<%= @dvd.anzahl %>
		</p>
		<p>
			<b>Verliehen:</b>
			<%= @dvd.verliehen %>
		</p>
	<% end %>
<% end %>


<%= link_to 'Edit', edit_dvd_path(@dvd) %> |
<%= link_to 'Back', dvds_path %>
